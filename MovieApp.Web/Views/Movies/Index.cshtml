@using MovieApp.Infrastructure.Models.MovieDb.Movies
@model PopularMoviesModel;

@{
    ViewData["Title"] = "Filmler";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
</head>

<div class="container my-4">
    <h1 class="text-center" style="font-family: 'Abril Fatface', cursive;">Filmler</h1>

    <div class="row">
        @foreach (var item in Model.results)
        {
            <div class="col-4 mb-4">
                <div class="card h-100">
                    <img src="@(string.Concat("https://image.tmdb.org/t/p/original", item.backdrop_path))" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.title</h5>
                        <p class="card-text">
                            @(item.overview != null && item.overview.Length > 200
                                ? item.overview.Substring(0, 200) + "..."
                                : item.overview)
                        </p>
                        <a href="/movies/@item.id" class="btn btn-primary w-100 mt-auto">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 