@{
    ViewData["Title"] = "Giriş";
}

<div class="auth-container">
    <div class="auth-box">
        <div class="auth-header">
            <h2>MovieApp</h2>
            <p>Hesabınıza giriş yapın</p>
        </div>
        
        <form id="login-form">
            <div class="form-group">
                <label>E-posta</label>
                <input type="email" id="email" class="form-input" placeholder="E-posta adresinizi giriniz">
            </div>

            <div class="form-group">
                <label>Parola</label>
                <input type="password" id="password" class="form-input" placeholder="Parolanızı giriniz">
            </div>

            <div class="form-group remember-me">
                <label class="checkbox-container">
                    <input type="checkbox" id="exampleCheck1">
                    Beni Hatırla
                </label>
            </div>

            <button type="submit" class="login-button">
                Giriş Yap
            </button>

            <div class="alert alert-danger mt-3" id="login-error" style="display: none;"></div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function() {
            $("#login-form").on('submit', function (e) {
                e.preventDefault();

                $("#login-error").hide();

                const submitBtn = $(this).find('button[type="submit"]');
                const originalBtnText = submitBtn.html();
                submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Giriş yapılıyor...');

                var loginData = {
                    email: $("#email").val(),
                    password: $("#password").val(),
                }

                $.ajax({
                    url: '/Auth/Login',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(loginData),
                    success: function(response) {
                        window.location.href = "/";
                    },
                    error: function (xhr) {
                        let errorMessage = "Bir hata oluştu. Lütfen tekrar deneyin.";
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        }
                        $("#login-error").text(errorMessage).fadeIn();
                        
                        submitBtn.prop('disabled', false).html(originalBtnText);
                        
                        $("#password").val('').focus();
                    }
                });
            });
        });
    </script>
}

