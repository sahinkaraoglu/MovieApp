@using MovieApp.Infrastructure.Models.MovieDb.PopularTvSeries
@model PopularTvSeriesModel;

@{
    ViewData["Title"] = "Diziler";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
</head>

<div class="container my-4">
    <h1 class="text-center" style="font-family: 'Abril Fatface', cursive;">Diziler</h1>

    <div class="row">
        @foreach (var item in Model.results)
        {
            <div class="col-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.Concat("https://image.tmdb.org/t/p/original", item.backdrop_path))" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-3">@item.name</h5>
                        <p class="card-text">
                            @(item.overview != null && item.overview.Length > 200
                                ? item.overview.Substring(0, 200) + "..."
                                : item.overview)
                        </p>
                        <a href="/series/@item.id" class="btn btn-primary w-100 mt-auto rounded-pill">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        color: #2c3e50;
        font-weight: 600;
    }

    .card-text {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .btn-primary {
        background-color: #3498db;
        border: none;
        padding: 0.8rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52,152,219,0.3);
    }
</style> 