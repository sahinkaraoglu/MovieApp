@using MovieApp.Infrastructure.Models.MovieDb.TvSeriesDetail
@model TvSeriesDetailModel;



<h1>
    <p>@Model.original_name </p>
</h1>
<h5>
    <img src="@(string.Concat("https://image.tmdb.org/t/p/original", Model.backdrop_path))" class="img-fluid" alt="@Model.original_name" style="max-width: 300px; height: auto;" />
    <p>
    <p>Bölüm Sayısı: @Model.number_of_episodes</p>
    <p>Sezon Sayısı: @Model.number_of_seasons</p>
    <p>Orjinal Dil: @Model.original_language</p>
</h5>

